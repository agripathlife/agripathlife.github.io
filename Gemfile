source "https://rubygems.org"

# Chỉ định phiên bản Ruby bạn đang dùng (Khuyến nghị dùng 3.x)
# ruby "3.0.0" 

# Đây là Gem (thư viện) chính của GitHub Pages
gem "github-pages", group: :jekyll_plugins

# Đây là các Gems bổ sung cần thiết cho remote_theme và SEO
gem "jekyll-remote-theme"
gem "jekyll-seo-tag"
gem "jekyll-feed"

# Thiết lập để sử dụng theme Architect
# Thêm dòng này để nếu có lúc bạn muốn dùng theme local thay vì remote_theme
# gem "jekyll-theme-architect"